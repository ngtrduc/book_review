<div class="center jumbotron">
  <% if user_signed_in? %>
    <div class="row">
      <aside class="col-md-4">
        <section class="user_info">
          <%= render "shared/user_info" %>
        </section>
        <section class="stats">
          <%= render "shared/stats" %>
        </section>
      </aside>
      <div class="col-md-8">
      </div>
    </div>
  <% else %>
    <h1><%= t ".title" %></h1>
    <h2>
      <%= t ".introduce" %>
      <%= link_to t(".linkto_framgia"), "#" %>
    </h2>
    <%= link_to t(".sign_up_now"), new_user_registration_path, class: "btn btn-lg btn-primary" %>
  <% end %>
</div>
