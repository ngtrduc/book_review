<ul class="nav nav-tabs" id="myTab">
  <li class="active">
    <%= link_to "New Feed", "#newfeed", data: {toggle: "tab"} %>
  </li>
  <li>
    <%= link_to "Top Review", "#reviews", data: {toggle: "tab"} %>
  </li>
  <li>
    <%= link_to "Favorited", "#favorite", data: {toggle: "tab"} %>
  </li>
  <li>
    <%= link_to "Reading History", "#reading-history", data: {toggle: "tab"} %>
  </li>
</ul>

<div class="tab-content">

  <div id="newfeed" class="tab-pane fade  in active">
    <%= render @activities %>
    <%= paginate @activities %>
    <%= page_entries_info @activities %>
  </div>

  <div id="reviews" class="tab-pane fade">
    <%= render "top_review" %>
  </div>

  <div id="favorite" class="tab-pane fade">
    <%= render "favorite" %>
  </div>

  <div id="reading-history" class="tab-pane fade">
    <%= render "reading_history" %>
  </div>
</div>
