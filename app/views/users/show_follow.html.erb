<div class="container-fluid well boxshadow">
  <div class="row">
    <hr>
    <ul class="breadcrumb">
      <li><%= link_to "Home", root_path %></li>
      <li><%= link_to "All users", users_path %></li>
      <li><%= link_to @user.name, @user %></li>
      <li><%= @title %></li>
    </ul>
    <hr>
  </div>

  <div class="row">
    <div class="col-md-4">
      <div class="col-md-6">
        <h1>
          <%= image_tag @user.avatar, size: Settings.users.size_ava, class: "book-image" %>
        </h1>
        <%= render "shared/stats" %>
      </div>
      <div class="col-md-6 avatar">
        <h2><%= @user.name %></h2>
        <%= @user.email %><br>
      </div>
      <div class="col-md-8">
        <% unless current_user == @user %>
          <%= render "users/follow_form", user: @user %>
        <% end %>
      </div>
    </div>

    <div class="col-md-8">
      <h3><%= @title %></h3>
      <% if @users.any? %>
        <ul class="users follow">
          <% @users.each do |user| %>
            <li>
              <%= link_to image_tag(user.avatar, size: Settings.users.size),
                user_path(user) %>
              <%= link_to user.name, user %>
            </li>
          <div id = "space" ></div>
          <% end %>
        </ul>
      <% end %>
    </div>
  </div>
</div>
