<div class="container-fluid">
  <div class="row">
    <div class="col-md-4">
      <div class="col-md-6">
        <h1>
          <% if @user.avatar? %>
            <%= image_tag(@user.avatar, size: Settings.users.size_ava) %>
          <% else %>
            <%= image_tag Settings.users.url, size: Settings.users.size_ava %>
          <% end %>
        </h1>
        <%= render "shared/stats" %>
      </div>
      <div class="col-md-6 avatar">
        <h2><%= @user.name %></h2>
        <%= @user.email %>
      </div>
      <div class="col-md-8">
        <% unless current_user == @user %>
          <%= render "follow_form" %>
        <% end %>
      </div>
    </div>
    <div class="col-md-8">
      <% unless current_user == @user %>
        <%= render "favorite" %>
      <% end %>
      <%= render "reading_history" %>
    </div>
  </div>
</div>
