<div class="container-fluid well boxshadow">
  <h1><%= t "Edit Profile" %></h1>
  <div class="row">
    <div class="col-md-5 col-md-offset-3">
      <%= form_for @user ,  html: { multipart: true } do |f| %>
        <%= render "shared/error_messages", object: f.object %>
        <%= f.text_field :name, placeholder: "Name..", class: "form-control" %>
        <%= f.email_field :email,placeholder: "Email..", class: "form-control" %>
        <div class="upload-preview">
          <%= image_tag @user.avatar, size: Settings.users.size_ava, class: "book-image" %>
        </div>
        <span class="picture">
          <%= f.file_field :avatar, accept: "image/jpeg,image/gif,image/png", class: "file" %>
        </span>
        <%= f.submit t("users.submit"), class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
