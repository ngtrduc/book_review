<header class="navbar navbar-fixed-top navbar-inverse dn-front-header">
  <div class="container">
    <%= link_to root_path, id: "logo" do %>
      <p class="dn-logo-text"><i>Book Review</i></p>
    <% end %>
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed"
        data-toggle="collapse" data-target="#bs-example-navbar-collapse-1"
        aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
    </div>
    <nav class="collapse navbar-collapse dropdown" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav navbar-right dn-ducoc">
        <% if user_signed_in? %>
          <li><%= link_to "Home", root_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <span class="hidden-xs"><%= current_user.email %></span>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Edit profile", edit_user_path(current_user) %></li>
              <li><%= link_to "All user", "#" %></li>
              <li><%= link_to "Change password",
                edit_user_registration_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t(:logout), destroy_user_session_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t(:signup), new_registration_path(resource_name) %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
