<div class="row">
  <div class="col-lg-5 col-lg-push-7">
    <div class="panel panel-default boxshadow">
      <div class="panel-heading dn-panel-head boxshadow">
        <h4><%= t :login %></h4>
      </div>
      <div class="panel-body">
        <%= form_for resource, as: resource_name, url: session_path(resource_name) do |f| %>
          <div class="field dn-field">
            <%= f.email_field :email, autofocus: true, class: "form-control",
              placeholder: "Your email" %>
          </div>

          <div class="field dn-field">
            <%= f.password_field :password, autocomplete: "off",
              class: "form-control", placeholder: "Your password" %>
          </div>

          <% if devise_mapping.rememberable? -%>
            <div>
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end -%>

          <div class="actions">
            <%= f.submit "Login", class: "btn btn-primary dn-submit-login" %>
          </div>
        <% end %>
        <div class="dn-login-sns">
          <h2 class="dn-login-strike">
            <span>Or Login By</span>
          </h2>
          <%= link_to "", user_facebook_omniauth_authorize_path,
            class: "fa fa-facebook dn-fb" %>
          <%= link_to "", user_google_oauth2_omniauth_authorize_path,
            class: "fa fa-google dn-gm" %>
        </div>
        <br>
        <br>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
  <div class="col-lg-7 col-lg-pull-5 main-photo">
  </div>
</div>
