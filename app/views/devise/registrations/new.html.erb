<div class="top-content">
  <div class="inner-bg">
    <div class="container">
      <div class="row">
          <div class="col-sm-6 col-sm-offset-3 well">
            <div class="form-top">
              <h1>Signup</h1>
              <h4>----------------------------------------------------------------------</h4>
            </div>
            <div class="form-bottom">
              <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                <%= devise_error_messages! %>
                <div class="form-group">
                  <%= f.text_field :name, placeholder: "name..", class: "form-control", autofocus: true %>
                </div>
                <div class="form-group">
                  <%= f.email_field :email, placeholder: "Email..", class: "form-control", autofocus: true %>
                </div>
                <div class="form-group">
                  <%= f.password_field :password, placeholder: "Password..(6 characters minimum)", class: "form-control", autocomplete: "off" %>
                </div>
                <div class="form-group">
                  <%= f.password_field :password_confirmation,placeholder: "Password confirmation", class: "form-control", autocomplete: "off" %>
                </div>
                <%= f.submit "SignUp",class: "btn-success form-control" %>
              <% end -%>
              <div style="margin-top:15px;">
                Already a member ?
                <%= render "devise/shared/links" %>
              </div>
            </div>
          </div>
        </div>
    </div>
  </div>
</div>
