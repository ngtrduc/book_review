<div class="container-fluid">
  <div class="row">
    <div class="col-sm-2 col-sm-offset-1">
      <%= image_tag @user.avatar, size: Settings.admin.users.size %>
    </div>
    <div class="col-sm-4 col-sm-offset-2">
      <h3><%= t "admin.users.table.name" %> <%= @user.name %></h3>
    <p> <%= t "admin.users.table.email" %> <%= @user.email %> </p>
    <p> <%= t "admin.users.table.password" %> <%= @user.password %> </p>
    <br>
    </div>
  </div>
  <div class="col-sm-offset-1">
    <%= link_to "", edit_admin_user_path(@user),class: "glyphicon glyphicon-edit" %> |
    <%= link_to "", admin_users_path,class: "glyphicon glyphicon-circle-arrow-left" %>
  </div>
</div>
