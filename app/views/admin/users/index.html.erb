<table class="table table-hover" id="data_table" >
  <thead>
    <tr class="info">
      <th><%= t "admin.users.table.id" %></th>
      <th><%= t "admin.users.table.avatar" %></th>
      <th><%= t "admin.users.table.name" %></th>
      <th><%= t "admin.users.table.email" %></th>
      <th>Review's count</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr id="user-<%= user.id%>" >
        <td><%= user.id %></td>
        <td>
          <%= link_to image_tag(user.avatar, size: Settings.admin.users.size),
            admin_user_path(user) %>
        </td>
        <td><%= link_to user.name, admin_user_path(user) %></td>
        <td><%= link_to user.email,admin_user_path(user) %></td>
        <td><%= user.reviews.size %></td>
        <td>
          <%= link_to "", edit_admin_user_path(user),
            class: "glyphicon glyphicon-edit" %>
            <% unless user.admin? %>
              | <%= link_to "", admin_user_path(user), method: :delete, data: {confirm: t("admin.messages.confirm")},class: "glyphicon glyphicon-remove" %>
            <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
