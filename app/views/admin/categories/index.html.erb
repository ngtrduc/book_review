<% provide :title, t("admin.categories.all") %>
<div class="title">
  <h1><%= t "admin.categories.all" %></h1>
</div>
  <table class="table table-hover" id="data_table">
    <thead>
      <tr>
        <th><%= t "admin.categories.category_name" %></th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% @categories.each do |category| %>
      <tr id="category-<%= category.id%>">
        <td><%= category.name %></td>
        <td>
          <%= link_to "", edit_admin_category_path(category),
            class: "glyphicon glyphicon-edit" %> |
          <%= link_to "", admin_category_path(category),
            method: :delete, data: {confirm: t("admin.categories.sure")},
            class: "glyphicon glyphicon-remove" %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
