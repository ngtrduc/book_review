<% provide :title, t("admin.categories.edit_category") %>
<h1><%= t "admin.categories.edit_category" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for [:admin, @category] do |f| %>
      <%= render "shared/error_messages", object: @category %>

      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>

      <%= f.submit t("admin.categories.save"), class: "btn btn-sm btn-primary" %>
    <% end %>
  </div>
</div>
