<table class="table table-hover row" id="data_table">
  <thead>
    <tr class="info">
      <th><%= t "admin.books.table.id" %></th>
      <th class="col-sm-2"><%= t "admin.books.table.picture" %></th>
      <th class="col-sm-2"><%= t "admin.books.table.title" %></th>
      <th class="col-sm-2"><%= t "admin.books.table.author" %></th>
      <th><%= t "admin.books.table.publish_date" %></th>
      <th><%= t "admin.books.table.number_page" %></th>
      <th><%= t "admin.books.table.rate_avg" %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr id="book-<%= book.id %>">
        <td><%= book.id %></td>
        <td>
          <%= link_to image_tag(book.picture, size: Settings.admin.books.size),
            admin_book_path(book) %>
        </td>
        <td><%= link_to book.title, admin_book_path(book) %></td>
        <td><%= book.author %></td>
        <td><%= book.publish_date %></td>
        <td><%= book.number_page %></td>
        <td>
          <span class="average-review-rating" data-score="<%= book.rate_avg %>"></span>
        </td>
        <td>
          <%= link_to "", edit_admin_book_path(book),
            class: "glyphicon glyphicon-edit" %> |
          <%= link_to "", admin_book_path(book),
              method: :delete, data: {confirm: t("admin.messages.confirm")},
              class: "glyphicon glyphicon-remove" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
