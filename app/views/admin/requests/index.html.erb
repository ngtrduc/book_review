<div id="sent_email">
</div>
<br>
<table class="table table-hover">
  <thead>
    <tr class="info">
      <th><%= t "admin.requests.table.id" %></th>
      <th><%= t "admin.requests.table.content" %></th>
      <th><%= t "admin.requests.table.status" %></th>
      <th><%= t "admin.requests.table.user" %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @requests.each do |request| %>
      <tr>
        <td><%= request.id %></td>
        <td><%= request.content %></td>
        <td>
          <% if request.accepted? %>
            <%= t "admin.requests.table.accepted" %>
          <% elsif request.denied? %>
            <%= t "admin.requests.table.denied" %>
          <% else %>
            <%= t "admin.requests.table.waitting" %>
          <% end %>
        </td>
        <td><%= link_to request.user.name, "#" %></td>
        <td>
          <%= link_to t("admin.requests.table.edit"), "#",
            class: "btn btn-primary" %>
          <%= link_to t("admin.requests.table.delete"), "#",
            method: :delete, data: {confirm: t("admin.messages.confirm")},
            class: "btn btn-danger" %>
        </td>
        <td>
          <% if request.waitting? %>
            <%= link_to t("admin.requests.sent_email"),
              admin_request_path(request[:id]), method: :put, class: "btn btn-primary" %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @requests %>
<%= page_entries_info @requests %>
