<h1><%= t "reviews.edit_title" %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= render "shared/error_messages", object: @review %>
    <%= form_for @review do |f| %>
      <div id="rating-form">
        <label>Rating: </label>
      </div>

      <%= f.label :content %>
      <%= f.text_area :content, class: "form-control", required: true %><br>

      <%= f.submit :submit, class: "btn btn-primary" %>
    <% end %>
    <%= link_to t("reviews.edit.cancle"), book_path(@review.book) %>
   </div>
</div>
