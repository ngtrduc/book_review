<div class="container-fluid well boxshadow">
  <div class="row">
    <hr>
    <ul class="breadcrumb">
      <li><%= link_to "Home", root_path %></li>
      <li><%= link_to @user.name, @user %></li>
      <li class="active"><%= "Notifications" %></li>
    </ul>
    <hr>
  </div>
  <div class="row user-notification">
    <div class="col-md-4">
      <div class="col-md-6">
        <h1>
          <%= link_to image_tag(@user.avatar,
            size: Settings.users.size_ava, class: "book-image"), @user %>
        </h1>
        <%= render "shared/stats" %>
        <p></p>
      </div>
      <div class="col-md-6 avatar">
        <h2><%= @user.name %></h2>
        <%= @user.email %><br>
      </div>
    </div>

    <div class="col-md-8 well">
      <h2><strong><%= "Notifications" %></strong></h2>
      <hr>
      <ul class="table table-hover notification-table">
        <% @user_notifications.each do |user_notification| %>
          <%= render "shared/notification", notification: user_notification %>
          <hr>
        <% end %>
      </ul>
      <div class="pull-right">
        <%= paginate @user_notifications %>
      </div>
    </div>
  </div>
</div>
