<div class = "avatar" >
  <% if current_user.avatar.present? %>
    <%= link_to image_tag(current_user.avatar, size: Settings.users.size_ava),
      current_user %>
  <% else %>
    <%= link_to image_tag(Settings.users.url, size: Settings.users.size_ava),
      current_user %>
  <% end %>
</div>
<span><%= link_to current_user.name, current_user %></span>
