<div class="row">
  <div class="col-xs-12 col-sm-6 col-md-5">
    <% if @book.picture.present? %>
      <%= link_to image_tag(@book.picture, size: Settings.books.size2), @book %>
    <% else %>
      <%= link_to image_tag(Settings.books.url, size: Settings.books.size2), @book %>
    <% end %>
  </div>
  <div class="col-xs-12 col-sm-6 col-md-7">
    <div class="title">
      <h2><b><%= @book.title %></b></h2>
    </div>

    <div class="description">
      <h3>Average Rating: </h3>
      <div class="average-review-rating" data-score=<%= @book.rate_avg %>></div>
      <span>Based on <%= @book.reviews.count %> reviews.</span>
      <h3><span><%= t "books.description" %></span></h3>
      <p><%= @book.description %></p>
    </div>
    <div id="form-btn-mark">
      <%= render "mark_button" %>
    </div>
  </div>
</div>
