<h1><%= t ".all" %></h1>
<div class="section group">
  <%= search_form_for @search do |f| %>
    <div class="field1">
      <%= f.label :title %>
      <%= f.text_field :title_cont, class: "form-control" %>
    </div>

    <div class="field1">
      <%= f.label :rate %>
      <%= f.text_field :rate_avg_eq, class: "form-control" %>
    </div>

    <div class="field1">
      <%= f.label :category_id %>
      <%= f.select :category_id_eq,
        options_from_collection_for_select(@categories, :id, :name), class: "form-control" %>
    </div>

    <div class="actions1"><%= f.submit t(".search"), class: "btn btn-primary" %></div>
  <% end %>
</div>
<div class="section group">
  <br>
  <% @books.each do |book| %>
    <div class ="row1">
      <% if book.picture.present? %>
        <%= link_to image_tag(book.picture, size: Settings.books.size), book %>
      <% else %>
        <%= link_to image_tag(Settings.books.url, size: Settings.books.size), book %>
      <% end %>
      <h4><%= link_to book.title, book_path(book) %></h4>
      <p><%= t ("books.author") %> <%= book.author %></p>
      <p>
        <span class="average-review-rating" data-score="<%= book.rate_avg %>"></span>
      </p>
    </div>
  <% end %>
</div>
<div class="page">
  <%= paginate @books %>
  <%= page_entries_info @books %>
</div>
