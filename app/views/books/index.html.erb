<h1><%= t ".all" %></h1>

<div class="section group">
  <br>
  <% @books.each do |book| %>
    <div class ="row1">
      <% if book.picture.present? %>
        <%= link_to image_tag(book.picture, size: Settings.books.size), book %>
      <% else %>
        <%= link_to image_tag(Settings.books.url, size: Settings.books.size), book %>
      <% end %>
      <h4><%= link_to book.title, book_path(book) %></h4>
      <p><%= t ("books.author") %> <%= book.author %></p>
      <p>
        <span class="average-review-rating" data-score="<%= book.rate_avg %>"></span>
      </p>
    </div>
  <% end %>
</div>
<div class="page">
  <%= paginate @books %>
  <%= page_entries_info @books %>
</div>
